    <main>
        <div class="pag-orcamento">
            <div class="fundo-orcamento">
                <div class="fundo-casa">

                    <h1 data-aos="fade-down" data-aos-easing="linear" data-aos-duration="1500" class="title-orcamento">Está na hora de tirar seu projeto do papel !</h1>

                    <img class="casa" src="img/fundo_orcamento.png" alt="casa">
                </div>
            </div>

            <div class="form-orcamento">
                <h1 class="orcamento">Orçamento</h1>
                <div class="divform">
                    <form class="form" action="#" method="post">
                        <label class="labelOrcamento" for=" nomeOrcamento">Nome:</label>
                        <input type="text" name="nomeOrcamento" class="dadosOrcamento">
                        <label class="labelOrcamento" for=" emailOrcamento">E-mail:</label>
                        <input type="text" name="emailOrcamento" class="dadosOrcamento">
                        <label class="labelOrcamento" for=" celularOrcamento">Celular:</label>
                        <input type="number" name="celularOrcamento" class="dadosOrcamento">

                        <label class="labelOrcamento" for=" mensagemOrcamento">Detalhe o que você precisa:</label>

                        <textarea type="text" name="mensagemOrcamento" class="dadosOrcamento"></textarea>
                        <div class="responsividadeform">
                            <input type="file" value="Arquivos">
                            <p>*Aqui você pode anexar a planta ou outros documentos.</p>
                        </div>
                        <input type="submit" value="SOLICITAR ORÇAMENTO" id="solicitarOrcamento"
                            class="solicitarOrcamento">
                    </form>
                </div>
            </div>
        </div>
